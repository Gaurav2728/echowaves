<%= render :partial => 'messages_controls' %>

<div id='messages'>
	<div id="first_message"></div>
	<% @messages.group_by(&:date).each do |date, grouped_messages| %>
	  <span class="groupdate"><%= date %></span>
	  <% grouped_messages.each do |message| %>
	    <%= render message %>
	  <% end %>
	<% end %>
	<%# render :partial => 'message', :collection => @messages %>
</div>