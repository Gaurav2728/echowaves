<div class="message" id="message<%= message.id %>">
	<p class="messagetools">
		<%= link_to_function "Quote", "MessageManipulation.quote("+message.id.to_s+")" %>
		<% if message.attachment.original_filename %>
			<%= link_to message.attachment.original_filename, message.attachment.url %>
		<% end %>
	</p>
	<p class="messagemeta">
		<img src="<%= message.user.gravatar_url %>" class="avatar" />
		<span class="username"><%=h message.user.login %></span>
		<br/>
		<span class="date"><%=h message.created_at.to_s(:pretty_long) %></span>
	</p>
	<p class="messagetext">
		<%= mark_up message.message %>
	</p>
</div>
