<div class="balloon">
  <h1><span class="username"><%=link_to h(@user.login), conversation_messages_path(@user.personal_conversation) %></span></h1>
  <p>
    <%= link_to image_tag(@user.gravatar_url, :border => 0, :width => 40, :height => 40, :class => "avatar", :alt => @user.login), user_path(@user) %>		
  </p>
<span><%= t("users.since") + " " + @user.created_at.to_s(:pretty)%></span>
|
<%= pluralize @user.conversations.size, 'convo' %>
|
<%= pluralize @user.messages.size, 'message' %>
|
<%= pluralize @user.subscriptions.size, 'subscription' %>
</div>
<div class="arrow">&nbsp;</div>


<div class="item">
  <div id="subscriptions_for_user">
  	<b><%= t("users.conversing_in") %>:</b>

	<ul class="list">
		<%= render :partial => 'conversations/conversation', :collection => @user.subscribed_conversations %>
	</ul>

  </div>
  
  <%= link_to t("ui.back"), users_path %>
</div>
  
