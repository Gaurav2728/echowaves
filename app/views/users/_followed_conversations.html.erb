<div id="followed_conversations" class="item">
  <b>Conversations you follow:</b><br/>
  <ul>
  <% current_user.conversations.each do |conversation| %>
	  <li><%= link_to h(conversation.escaped_name), conversation_messages_path(conversation), :class => 'tip', :title => conversation.escaped_description %></li>
  <% end %>
  </ul>
</div>