<% if logged_in? %>
  <span id="follow_conversation"> 
		<% if @conversation.followed?(current_user) %>
			<%= link_to_remote t("ui.unfollow"), :url => unfollow_conversation_path(@conversation) %>
		<% else %>
			<%= link_to_remote t("ui.follow"), :url => follow_conversation_path(@conversation) %>
		<% end %>
  </span>
<% end %>
