<div class="ballon">
  <h1>recently started conversations</h1>
  <div>
    <%= link_to 'Start New conversation', new_conversation_path %> |
  	look for conversations:
  	<%= text_field_with_auto_complete :conversation, :name, { :size => 35 }, :skip_style => true,
  	:after_update_element => 
  	"function(element,value) " +
  	  "{ window.location=('/complete_conversation_name?id='+element.value);}"
  	-%>
  </div>
  
</div>
<div class="arrow">&nbsp;</div>



<div class="item">

<%= will_paginate @conversations %>

<ul>
<% for conversation in @conversations %>
    <li><%= link_to h(conversation.name), conversation_messages_path(conversation), :class => 'tip', :title => conversation.escaped_description %> (<%= conversation.created_at.to_s(:date_time12) %>)</li>
<% end %>
</ul>

<%= will_paginate @conversations %>


<%= link_to 'Start New conversation', new_conversation_path %>
</div>