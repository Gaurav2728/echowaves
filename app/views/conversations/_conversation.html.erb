<li class="conversation">
	<%if conversation.personal_conversation == true%>
		<%= link_to image_tag(conversation.user.gravatar_url, :border => 0, :width => 40, :height => 40, :class => "avatar", :alt => conversation.user.login), user_path(conversation.user),
		:class => 'tip', 
		:title =>  t("users.since") + conversation.user.created_at.to_s(:pretty)  + 
		'<br/>' + pluralize(conversation.user.conversations.size, 'convo') +
		'<br/>' + pluralize(conversation.user.messages.size, 'message') +
		'<br/>' + pluralize(conversation.user.subscriptions.size, 'subsription') %>		
	<%end%>

	<h5><%= link_to h(conversation.name), conversation_messages_path(conversation) %></h5>
	<%= conversation.escaped_description %>
	<br/>
	<span class="quiet small"><%= conversation.created_at.to_s(:date_time12) %> - </span>
	<span class="quiet small"><%= pluralize conversation.messages.size, 'message' %> - </span>
	<span class="quiet small"><%= pluralize conversation.subscriptions.size, 'follower' %> - </span>
	<span class="quiet small"><%= render :partial => 'conversations/follow_from_list', :object => conversation %></span>
</li>
