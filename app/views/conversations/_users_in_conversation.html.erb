<div id="users_in_conversation" class="item">
	<b>Recent Followers:</b><br/>
	<%= render :partial => 'conversations/user', :collection => @conversation.users.reverse[0..9] %>
	<% if @conversation.users.length > 10 %>
	  <br/>and <%= @conversation.users.length - 10 %>
	  <%= link_to_function("more...", nil, :id => "more_link") do |page|
        page.insert_html :bottom, 'messages', :partial => 'conversations/users_message', :locals => {:users => @conversation.users}
    end %>
	<% end %>
</div>