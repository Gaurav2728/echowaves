<% if logged_in? %>
  <span id="follow_conversation_<%=conversation.id-%>">
		<% if conversation.followed_by?(current_user) %>
			<%= "&#187; " + link_to_remote( t("ui.unfollow"), :url => conversation_subscription_path(conversation) ) %>
		<% else %>
		  <% if !conversation.private? || conversation.user_id == current_user.id %>
			  <%= "&#187; " + link_to_remote( t("ui.follow"), :url => conversation_subscription_path(conversation) ) %>
			<% end %>
		<% end %>
  </span>
<% end %>
