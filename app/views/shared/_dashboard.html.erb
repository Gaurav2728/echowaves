<div id="dashboard" class="span-10 last box round">

  <div id="session-menu">
    <ul>
			<% if logged_in? %>
			<li class="mbutton round"><%= link_to t("ui.logout"), logout_path %></li>
			<li><%= link_to "@" + h(current_user.login), user_path(current_user) %></li>
			<li><%= link_to "bookmarks", bookmarked_conversations_path, :class => 'bookmarks_link' %></li>
			<%else%>
			<li class="mbutton round"><%= link_to t("ui.login"), new_user_session_path %></li>
			<li class="mbutton round"><%= link_to t("ui.signup"), new_user_path %></li>
			<%end%>
    </ul>
    <div class="clear"></div>
  </div>
  
  <%= yield(:sidebar_top) %>
  
  <% if logged_in? %>
    <h5>DASHBOARD</h5>
    <div class="span-5">
      <%= render :partial => 'users/recently_visited' %>
    </div>
    <div class="span-5 last">
      <%= render :partial => 'users/news' %>
    </div>
	
	
  <% else %>
  
    <div>
      <h5>What is EchoWaves?</h5>
    	<p>Echowaves is a free service that enables comunication through, IM-style conversations. You can converse in real-time or over semi-frequent visits to the site continuing your conversations right where you left off.</p>
    	<div class="big center vspace"><span class="round button"><%= link_to "Join Echowaves", new_user_path %></span></div>
    </div>
    
    
  <% end %>

	<%if SHOW_DIGG && @conversation &&!@conversation.private?%>
	<div>
		<script type="text/javascript">
		digg_url = 'WEBSITE_URL';
		digg_bgcolor = '#ff9900';
		digg_skin = 'compact';
		digg_window = 'new';
		</script>
		<script src="http://digg.com/tools/diggthis.js" type="text/javascript"></script>

		<script type="text/javascript">
		tweetmeme_style = 'compact';
		</script>
		<script type="text/javascript" src="http://tweetmeme.com/i/scripts/button.js"></script>

	</div>
	<%end%>
	
</div>

